{
  "name": "Luoyeshu Extension",
  "version": "1.0",
  "description": "Luoyeshu's chrome plugin",
  "icons": {
    "16": "icon/icon_16.png",
    "24": "icon/icon_24.png",
    "32": "icon/icon_32.png",
    "48": "icon/icon_48.png",
    "64": "icon/icon_64.png",
    "72": "icon/icon_72.png",
    "96": "icon/icon_96.png",
    "128": "icon/icon_128.png"
  },
  "manifest_version": 2,
  "background": {
    "page": "view/background.html"
  },
  "content_scripts": [
    {
      // "css": ["salesforce.css"],
      "js": ["js/content.js"],
      "matches": [
        "http://*/",
        "https://*/"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "options_page": "view/options.html",
  "permissions": ["http://*/", "https://*/", "contextMenus", "tabs", "cookies"],
  "browser_action": {
    // "default_popup": "view/popup.html",
    "default_title": "Luoyeshu chrome plugin",
    "default_icon": "icon/icon_24.png"
  }
}